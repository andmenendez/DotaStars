<div class="match_show_container">
  <div class="match_show_header">
    <div class="event_title"><%=link_to @event.title, event_path(@event)%></div>

    <div class="edit">
      <%= link_to "EDIT MATCH", edit_match_path(@match) %> /
      <%= link_to "DELETE MATCH", match_path(@match), method: :delete %>
      <br/>
      <br/>
    </div>

    <div class="event_image">
      <%=image_tag @event.image.url(:large)%></div>

  </div>

  <div class="match_show_teams_container">
    <%= render partial: 'matches_player_list', locals: {
            :match_side => "Radiant", :team => @radiant } %>
    <div class="team_name vs">vs</div>
    <%= render partial: 'matches_player_list', locals: {
            :match_side => "Dire", :team => @dire } %>
  </div>


</div>  